{
    "manifest_version":  3,
    "name":  "Bookmark ChatGPT - Pin AI Responses",
    "version":  "1.0.6",
    "description":  "Bookmark ChatGPT, Claude & Gemini responses. Pin AI messages, add labels, and jump back to saved responses instantly. 100% local.",
    "permissions":  [
                        "storage",
                        "activeTab",
                        "tabs"
                    ],
    "host_permissions":  [
                             "https://claude.ai/*",
                             "https://chat.openai.com/*",
                             "https://chatgpt.com/*",
                             "https://gemini.google.com/*"
                         ],
    "background":  {
                       "service_worker":  "background.js"
                   },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://claude.ai/*"
                                            ],
                                "js":  [
                                           "scripts/storage.js",
                                           "content-scripts/shared.js",
                                           "content-scripts/claude.js"
                                       ],
                                "css":  [
                                            "styles/pin-button.css"
                                        ],
                                "run_at":  "document_idle"
                            },
                            {
                                "matches":  [
                                                "https://chat.openai.com/*",
                                                "https://chatgpt.com/*"
                                            ],
                                "js":  [
                                           "scripts/storage.js",
                                           "content-scripts/shared.js",
                                           "content-scripts/chatgpt.js"
                                       ],
                                "css":  [
                                            "styles/pin-button.css"
                                        ],
                                "run_at":  "document_idle"
                            },
                            {
                                "matches":  [
                                                "https://gemini.google.com/*"
                                            ],
                                "js":  [
                                           "scripts/storage.js",
                                           "content-scripts/shared.js",
                                           "content-scripts/gemini.js"
                                       ],
                                "css":  [
                                            "styles/pin-button.css"
                                        ],
                                "run_at":  "document_idle"
                            }
                        ],
    "action":  {
                   "default_popup":  "popup/popup.html",
                   "default_title":  "Bookmark ChatGPT - Pin AI Responses"
               }
}
